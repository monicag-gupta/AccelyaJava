     <tr> <td>City</td>   
         <td><input type="text" [(ngModel)]="model.city" /></td>  </tr>  
     <tr> <td></td> <td><input type="button" value="Submit" (click)="submit()" />     
      <input type="button" value="Reset" (click)="reset()" /></td></tr> </table>  
    <h3>Employee Details</h3>  
