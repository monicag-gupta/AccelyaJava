  bootstrap: [AppComponent]
})
export class AppModule { }









Use the service: app.component.ts



import { Component, OnInit } from '@angular/core';
import { EmployeeService } from './employee.service';
@Component({
    selector: 'app-root',
    templateUrl: './app.component.html',
    styleUrls: ['./app.component.css']
})
export class AppComponent implements OnInit {
    public model: any = {};
    public source: Array<any>;
    constructor(public service: EmployeeService) {
        this.source = this.service.returnEmpData();
    }
    ngOnInit(): void { }
    public submit(): void {
        if (this.validate()) {
            this.service.addEmpData(this.model);
            this.reset();
        }
    }
    public reset(): void { this.model = {}; }
    public validate(): boolean {
        let status: boolean = true;
        if (typeof (this.model.name) === "undefined") {
            alert('Name is Blank'); status = false; return status;
        }
        else if (typeof (this.model.city) === "undefined") {
            alert('City is Blank');
            status = false; return status;
        }
        return status;
    }
} 





















Use service: app.component.html

<div>   
    <h2>Employee Form</h2>   <table border="1">  
