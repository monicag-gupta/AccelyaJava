		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			Connection con = DriverManager.getConnection("jdbc:oracle:thin:@//localhost:1521/orclpdb.localdomain",
					"mydb", "oracle");
			PreparedStatement stmt=con.prepareStatement("insert into EmpTbl(id,name) values(?,?)");  
			stmt.setInt(1,101);//1 specifies the first parameter in the query  
			stmt.setString(2,"Xyz");
			int i=stmt.executeUpdate();  
			System.out.println(i+" records inserted");  
			
			con.close();
		} catch (Exception e) {
			System.out.println(e);
		}
	}
