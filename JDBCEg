create or replace procedure INSERTR
(id IN NUMBER,  
name IN VARCHAR2, 
sal IN NUMBER)  
is  
begin  
insert into Emptbl values(id,name,sal);  
end;  
/   






package Day5;
import java.sql.*;
public class OracleCon {
	public static void main(String args[]) {
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			Connection con = DriverManager.getConnection("jdbc:oracle:thin:@//localhost:1521/orclpdb.localdomain",
					"mydb", "oracle");
			CallableStatement stmt=con.prepareCall("{call insertR(?,?,?)}");
			stmt.setInt(1,1051);
			stmt.setString(2,"Emp15");
			stmt.setInt(3,899);
			//stmt.registerOutParameter(1,Types.INTEGER);
			stmt.execute();
			System.out.println("success");			
			con.close();
		} catch (Exception e) {
			System.out.println(e);
		}
	}
}








package aa;
import java.sql.*;
public class OracleCon {
	public static void main(String args[]) {
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			Connection con = DriverManager.getConnection("jdbc:oracle:thin:@//localhost:1521/orclpdb.localdomain",
					"mydb", "oracle");
			con.setAutoCommit(false);
			Statement stmt=con.createStatement();
			stmt.executeUpdate("insert into EmpTbl values(190,'abhi',40000)");
			stmt.executeUpdate("insert into EmpTbl values(191,'umesh',50000)");
			con.commit();
			System.out.println("Commited");
			con.close();
		} catch (Exception e) {
			System.out.println(e);
		}
	}
}










